<div class="container flex flex-col mx-auto px-4 pb-12">
  <p class="text-green-500 text-center mb-4" if notice.present?<%= notice %></p>

  <% if @user.present? %>
    <%= render @user %>

    <div class="flex items-center justify-between mt-8">
      <%= link_to "Edit this user", edit_user_path(@user), class: "px-4 py-2 bg-blue-500 text-white hover:bg-blue-700 rounded-md" %>

      <div class="flex space-x-2">
        <%= link_to "Back to users", users_path, class: "px-4 py-2 bg-gray-200 text-gray-700 hover:bg-gray-300 rounded-md" %>
        <%= button_to "Destroy this user", @user, method: :delete, data: { confirm: "Are you sure you want to delete this user?" }, class: "px-4 py-2 bg-red-500 text-white hover:bg-red-700 rounded-md" %>
      </div>
    </div>
  <% else %>
    <p class="text-center text-gray-500 font-bold">No user found.</p>
  <% end %>
</div>
