<div class="container flex flex-col mx-auto px-4 pb-12">
  <p class="text-green-500 text-center mb-4" if notice.present?><%= notice %></p>

  <h1 class="text-3xl font-bold text-center mb-4">Users</h1>
  <div class="container mx-auto px-4 py-8">
      <%= turbo_frame_tag "first_turbo_frame" do %>
        <%= link_to "New user", new_user_path, class: "px-4 py-2 bg-green-500 text-white hover:bg-green-700 rounded-md" %>
      <%end%>
    </div>

      <ul id="users" class="list-none space-y-4">
        <% @users.each do |user| %>
          <%= render user %>
          
          <p class="text-center">
          <%= link_to "Show this user", user, class: "text-blue-500 hover:underline" %>
          </p>
          <% end %>
        </ul>
</div>
