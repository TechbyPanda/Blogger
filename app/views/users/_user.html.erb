<turbo-stream action="prepend" target="users">
  <template>
    <%= turbo_frame_tag "user_#{user.id}" do %>
    <div class="flex flex-col bg-gray-100 shadow-md rounded-lg border border-gray-300 p-4 mb-2">
      <p class="text-lg font-bold mb-2">
        <strong>Name:</strong> <span class="text-gray-800"><%= user.name %></span>
      </p>
      <p class="text-base mb-2">
        <strong>Email:</strong> <span class="text-gray-600"><%= user.email %></span>
      </p>
      <p class="text-base text-red-500">
        <strong>Password: <%= user.email %></strong>
      </p>
      <div class="flex items-center justify-between mt-8">
          <%= link_to "Edit this user", edit_user_path(user), class: "px-4 py-2 bg-blue-500 text-white hover:bg-blue-700 rounded-md" %>

          <div class="flex space-x-2">
            <%= link_to "Back to users", users_path, class: "px-4 py-2 bg-gray-200 text-gray-700 hover:bg-gray-300 rounded-md" %>
            <%= button_to "Destroy this user", user, method: :delete, data: { confirm: "Are you sure you want to delete this user?" }, class: "px-4 py-2 bg-red-500 text-white hover:bg-red-700 rounded-md" %>
          </div>
        </div>
    </div>
    <%end%>
  </template>
</turbo-stream>