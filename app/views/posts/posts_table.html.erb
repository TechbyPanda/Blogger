<table class="table-auto w-full mx-auto border border-gray-200 rounded-md shadow">
  <thead>
    <tr class="bg-gray-100 text-gray-700 font-bold py-2">
      <th class="px-6 text-left">Title</th>
      <th class="px-6 text-left">Published</th>
      <th class="px-6 text-left">Created At</th>
      <th class="px-6 text-left">Updated At</th>
      <th class="px-6">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr class="border-b border-gray-200 hover:bg-gray-100">
        <td class="px-6 py-4"><%= post.title.truncate(100) %></td>
        <td class="px-6 py-4">
          <%= check_box_tag "published", nil, post.published %>
        </td>
        <td class="px-6 py-4"><%= post.created_at.strftime("%d %b %Y, %H:%M") %></td>
        <td class="px-6 py-4"><%= post.updated_at.strftime("%d %b %Y, %H:%M") %></td>
        <td class="px-6 py-4 flex space-x-2">
          <%= link_to "Edit", edit_post_path(post), class:"px-4 py-2 bg-green-500 text-white hover:bg-green-700 rounded-md" %>
          <%= button_to "Destroy", post_path(post), method: :delete, data: { confirm: "Are you sure you want to delete this post?" }, class:"px-4 py-2 bg-red-500 text-white hover:bg-red-700 rounded-md" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
