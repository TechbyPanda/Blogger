<%= link_to "New Post", new_post_path, class: "inline-flex items-center px-4 py-2 ml-4 mt-8 bg-green-500 text-white rounded-md font-medium hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
<main class="container mx-auto px-4 py-8">
  <div class="flex flex-col md:flex-row justify-between">
    <div class="w-full md:w-4/5">
      <ul role="list" class="space-y-4">
        <% @posts.each do |post| %>
          <li class="bg-white rounded-lg shadow overflow-hidden">
            <h2 class="text-lg font-medium text-gray-900 py-4 px-6">
              <%= link_to post.title, post_path(post), class: "text-blue-500 hover:underline" %>
            </h2>
            <div class="px-6 py-4">
              <p class="text-gray-700 text-base"><%= post.body.truncate(250) %></p>
            </div>
            <footer class="flex items-center justify-between px-6 py-4 border-t border-gray-200">
              <div class="flex items-center text-sm text-gray-700">
                <svg class="fill-current mr-2 text-gray-400 w-4 h-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M1 2a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-4.115.503a1 1 0 01-1.059-.54l.503-4.114a1 1 0 01.836-.986H1zm6 9a1 1 0 011-1h.854a1 1 0 01.914.654l3.52 3.492a1 1 0 010 1.308l-3.52 3.492a1 1 0 01-.914.654H7a1 1 0 01-1-1zm5-5a1 1 0 011-1h.854a1 1 0 01.914.654l3.52 3.492a1 1 0 010 1.308l-3.52 3.492a1 1 0 01-.914.654H12a1 1 0 01-1-1z" clip-rule="evenodd"></path></svg>
                <%= time_ago_in_words(post.created_at) %> ago
              </div>
              <div class="flex items-center">
                <%= link_to "Read More", post_path(post), class: "inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-md font-medium hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
              </div>
            </footer>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="w-full md:w-1/5 mt-4 md:mt-0">
      </div>
  </div>
</main>
